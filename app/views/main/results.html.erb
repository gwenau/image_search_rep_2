<a href="/"><button>Back</button></a><a href="/past">
<h1 style="text-align: center">Results for <%= @lucky_draw %></h1>
<% if @hash %>
  <div style="text-align: center">
    <a href="<%= @hash.first["pagemap"]["cse_image"][0]["src"] %>"><img src="<%= @hash.first["pagemap"]["cse_image"][0]["src"] %>" width="400px" style="border: 6px blue solid"/></a>
  </div>
  <div style="margin-left: 300px">
    <% @hash[1..4].each do |a| %>
      <div style="float: left; margin: 15px"> 
        <img src="<%= a["pagemap"]["cse_image"][0]["src"] %>" width="200px"/>
      </div>
    <% end %>
  </div>
<% end %>
<table style="clear: both; margin: auto">
  <tr>
    <th style="border: 1px black solid;">Search Id</th>
    <th style="border: 1px black solid;">Date & Time</th>
    <th style="border: 1px black solid;">Colour</th>
    <th style="border: 1px black solid;">Noun</th>
    <th style="border: 1px black solid;">Results</th>
  </tr>
  <% @past_search_results.each do |av| %>
    <tr>
      <% av.each do |k,v| %>
          <td style="border: 1px black solid;">
            <% if v.is_a? Numeric %>
              <%= v %>
            <% elsif v.kind_of?(String) %>
                <%= v %>
            <% else %>
                <!-- A link to see the results would have occurred here and this part would have required a bit more planning too. Either a new view file would have been set up or the main/index.html.erb would be used instead. -->
                <a href="#">See Results</a>
            <% end %>
          </td>
      <% end %>
    </tr>
  <% end %>
</table>
